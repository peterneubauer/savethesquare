# Stripe Configuration
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=pk_live_your_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# SendGrid Configuration
# Get this from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=noreply@savethesquare.se

# Site Configuration
# This will be your Netlify URL, e.g., https://savethesquare.netlify.app
SITE_URL=https://savethesquare.netlify.app

# Test Mode Configuration
STRIPE_TEST_MODE=true    # Simulates Stripe payments with alerts (no real charges)
EMAIL_TEST_MODE=false    # Set to false to send real emails even when Stripe is in test mode
